<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <br /><br />
      <h3>Edit Your listing:</h3>
      <form
        method="post"
        action="/listings/<%= listing._id %>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-lable">Title</label>
          <input
            type="text"
            name="listing[title]"
            value="<%=listing.title %>"
            class="form-control"
            required
          />
          <div class="valid-feedback"> Title looks good!</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-lable">Description</label>
          <textarea
            type="text"
            name="listing[description]"
            class="form-control"
            required
          >

 <%=listing.description %>  </textarea
          >
          <div class="invalid-feedback">Please enter a short description </div>
        </div>
<div class="mb-3">
Origional Listing Image

<img src="OrigionalImageURL" alt="">
</div>
        <div class="mb-3">
          <label for="image" class="form-lable"> Upload New Image </label>
          <input
            type="file"
            name="listing[image]"
            
            class="form-control"
            
          />
          
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">Price</label>
            <input
              type="number"
              name="listing[price]"
              value="<%=listing.price %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a valid price </div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-lable">Country</label>
            <input
              type="text"
              name="listing[country]"
              value="<%=listing.country %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a valid country name </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-lable">Location</label>
          <input
            type="text"
            name="listing[location]"
            value="<%=listing.location %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid location </div>
        </div>

        <button class="edit-btn mt-3">Edit</button>
      </form>
    </div>
  </div>
  <script src="/js/script.js"></script>
</body>
 